<%= form_for @film, url: {action: "create"} do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <%= f.label :year%>
    <%= f.text_field :year%>

    <%= f.label :synopsis%>
    <%= f.text_area :synopsis%>

    <%= f.label :picture%>
    <%= f.text_field :picture%>



    <%= f.submit %>

<% end %>